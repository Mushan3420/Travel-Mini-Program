/**app.qss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
button::after {
  border-radius: 0;
  border: none;
}
.relative {
  position: relative;
}
.userLogin {
  top:0;
  left:0;
  right:0;
  bottom:0;
  opacity: 0;
  position: absolute;
}
.advert {
  margin-top:40rpx;
  margin-bottom:40rpx;
}
.widget-bar {
  right: 10rpx;
  z-index: 99;
  bottom: 135rpx;
  width: 100rpx;
  position: fixed;
}
.widget-playing { 
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items:center;
  margin:20rpx auto;
  border-radius: 100%;
  background: #59d1b6;
  justify-content: center;
}
.widget-playing-icon {
  height: 60rpx;
  display: flex;
  margin-bottom:16rpx;
  align-items: flex-end;
}
.widget-playing-icon i {
  float:left;
  width: 8rpx;
  height: 8rpx;
  max-height: 56rpx;
  margin-left: 8rpx;
  background-color: #fff;
}
.widget-playing-icon i:nth-of-type(1) {
  margin-left: 0;
}
.widget-playing-icon i:nth-of-type(1) {
  animation:music-wave 0.6s linear infinite;
  -webkit-animation:music-wave 0.6s linear infinite;
}
.widget-playing-icon i:nth-of-type(2) {
  animation:music-wave 0.9s linear infinite;
  -webkit-animation:music-wave 0.9s linear infinite;
}
.widget-playing-icon i:nth-of-type(3) {
  animation:music-wave 0.7s linear infinite;
  -webkit-animation:music-wave 0.7s linear infinite;
}
.widget-playing-icon i:nth-of-type(4) {
  animation:music-wave 0.5s linear infinite;
  -webkit-animation:music-wave 0.5s linear infinite;
}
.widget-playing-icon i:nth-of-type(5) {
  animation:music-wave 0.9s linear infinite;
  -webkit-animation:music-wave 0.9s linear infinite;
}
.widget-playing-icon i:nth-of-type(6) {
  animation:music-wave 1.2s linear infinite;
  -webkit-animation:music-wave 1.2s linear infinite;
}
@-webkit-keyframes music-wave {
  0%{
    height: 8rpx;
  }
  50%{
    height: 60rpx;
  }
  100%{
    height: 24rpx;
  }
}
@keyframes music-wave {
  0%{
    height: 8rpx;
  }
  50%{
    height: 60rpx;
  }
  100%{
    height: 24rpx;
  }
}